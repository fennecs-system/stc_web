<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <title>STC</title>
    <style>
      /* ── reset ───────────────────────────────────────────────────── */
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

      /* ── tokens ──────────────────────────────────────────────────── */
      :root {
        --bg:        #0a0a0a;
        --bg-1:      #111111;
        --bg-2:      #181818;
        --border:    #222222;
        --border-hi: #3a3a3a;
        --fg:        #c8c8c8;
        --fg-dim:    #585858;
        --fg-mid:    #888888;
        --green:     #10b981;
        --amber:     #f59e0b;
        --red:       #ef4444;
        --blue:      #60a5fa;
        --purple:    #a78bfa;
        --mono:      'Courier New', Courier, 'Lucida Console', Monaco, monospace;
      }

      /* ── base ────────────────────────────────────────────────────── */
      body {
        background: var(--bg);
        color: var(--fg);
        font-family: var(--mono);
        font-size: 13px;
        line-height: 1.6;
        min-height: 100vh;
      }

      a { color: var(--fg-mid); text-decoration: none; }
      a:hover { color: var(--fg); }

      /* ── header ──────────────────────────────────────────────────── */
      .stc-header {
        background: var(--bg-1);
        border-bottom: 1px solid var(--border-hi);
        padding: 0 20px;
        display: flex;
        align-items: stretch;
        gap: 0;
        height: 36px;
      }

      .stc-logo {
        color: var(--green);
        font-size: 13px;
        font-weight: bold;
        letter-spacing: 3px;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        padding-right: 24px;
        border-right: 1px solid var(--border);
        margin-right: 4px;
        user-select: none;
      }

      .stc-nav {
        display: flex;
        align-items: stretch;
        gap: 0;
        list-style: none;
      }

      .stc-nav a {
        display: flex;
        align-items: center;
        padding: 0 16px;
        color: var(--fg-dim);
        font-size: 12px;
        letter-spacing: 1px;
        border-right: 1px solid var(--border);
        transition: color 0.1s, background 0.1s;
      }

      .stc-nav a:hover {
        color: var(--fg);
        background: var(--bg-2);
      }

      .stc-nav a.active {
        color: var(--green);
        background: var(--bg-2);
      }

      .stc-header-right {
        margin-left: auto;
        display: flex;
        align-items: center;
        color: var(--fg-dim);
        font-size: 11px;
        letter-spacing: 1px;
      }

      /* ── page ────────────────────────────────────────────────────── */
      .stc-page {
        padding: 28px 24px;
        max-width: 1280px;
      }

      .stc-page-title {
        font-size: 11px;
        letter-spacing: 3px;
        text-transform: uppercase;
        color: var(--fg-dim);
        margin-bottom: 20px;
      }

      .stc-page-title span {
        color: var(--green);
      }

      /* ── section ─────────────────────────────────────────────────── */
      .stc-section {
        margin-bottom: 32px;
      }

      .stc-section-title {
        font-size: 10px;
        letter-spacing: 3px;
        text-transform: uppercase;
        color: var(--fg-dim);
        border-bottom: 1px solid var(--border);
        padding-bottom: 6px;
        margin-bottom: 12px;
      }

      /* ── stat cards ──────────────────────────────────────────────── */
      .stc-stats {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 28px;
      }

      .stc-stat {
        border: 1px solid var(--border-hi);
        background: var(--bg-1);
        padding: 14px 18px;
        min-width: 110px;
      }

      .stc-stat-label {
        font-size: 10px;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: var(--fg-dim);
      }

      .stc-stat-value {
        font-size: 28px;
        font-weight: bold;
        color: var(--green);
        margin-top: 4px;
        line-height: 1;
      }

      .stc-stat-value.amber  { color: var(--amber); }
      .stc-stat-value.red    { color: var(--red); }
      .stc-stat-value.blue   { color: var(--blue); }

      /* ── table ───────────────────────────────────────────────────── */
      .stc-table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid var(--border);
      }

      .stc-table th {
        text-align: left;
        padding: 7px 12px;
        font-size: 10px;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: var(--fg-dim);
        background: var(--bg-1);
        border-bottom: 1px solid var(--border-hi);
        white-space: nowrap;
      }

      .stc-table td {
        padding: 8px 12px;
        border-bottom: 1px solid var(--border);
        vertical-align: middle;
        font-size: 12px;
      }

      .stc-table tr:last-child td { border-bottom: none; }
      .stc-table tr:hover td { background: var(--bg-1); }

      /* ── event type badges ───────────────────────────────────────── */
      .evt {
        display: inline-block;
        font-size: 10px;
        letter-spacing: 1px;
        padding: 1px 6px;
        border: 1px solid;
        text-transform: uppercase;
        white-space: nowrap;
      }

      .evt-ready     { color: var(--amber);  border-color: var(--amber); }
      .evt-started   { color: var(--blue);   border-color: var(--blue); }
      .evt-completed { color: var(--green);  border-color: var(--green); }
      .evt-failed    { color: var(--red);    border-color: var(--red); }
      .evt-pending   { color: var(--fg-mid); border-color: var(--fg-mid); }
      .evt-preempted { color: var(--purple); border-color: var(--purple); }
      .evt-progress  { color: var(--blue);   border-color: var(--blue); }

      /* ── id / mono values ────────────────────────────────────────── */
      .id    { color: var(--fg-mid); font-size: 11px; }
      .dim   { color: var(--fg-dim); }
      .ts    { color: var(--fg-dim); font-size: 11px; white-space: nowrap; }
      .mono  { font-family: var(--mono); }

      /* ── empty state ─────────────────────────────────────────────── */
      .stc-empty {
        color: var(--fg-dim);
        padding: 32px;
        text-align: center;
        border: 1px dashed var(--border-hi);
        font-size: 12px;
        letter-spacing: 1px;
      }

      /* ── filters bar ─────────────────────────────────────────────── */
      .stc-filters {
        display: flex;
        gap: 8px;
        align-items: center;
        margin-bottom: 12px;
        flex-wrap: wrap;
      }

      .stc-filters label {
        font-size: 10px;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: var(--fg-dim);
      }

      .stc-input, .stc-select {
        background: var(--bg);
        border: 1px solid var(--border-hi);
        color: var(--fg);
        font-family: var(--mono);
        font-size: 12px;
        padding: 4px 8px;
        outline: none;
      }

      .stc-input:focus, .stc-select:focus {
        border-color: var(--green);
      }

      .stc-btn {
        background: var(--bg);
        border: 1px solid var(--border-hi);
        color: var(--fg-mid);
        font-family: var(--mono);
        font-size: 12px;
        padding: 4px 12px;
        cursor: pointer;
        letter-spacing: 1px;
      }

      .stc-btn:hover {
        border-color: var(--green);
        color: var(--green);
      }

      .stc-btn.active {
        border-color: var(--green);
        color: var(--green);
        background: var(--bg-2);
      }

      /* ── pagination ──────────────────────────────────────────────── */
      .stc-pagination {
        display: flex;
        gap: 8px;
        align-items: center;
        margin-top: 12px;
        font-size: 11px;
        color: var(--fg-dim);
      }

      /* ── scheduler card ──────────────────────────────────────────── */
      .stc-scheduler-card {
        border: 1px solid var(--border-hi);
        background: var(--bg-1);
        margin-bottom: 16px;
        padding: 16px 20px;
      }

      .stc-scheduler-header {
        display: flex;
        align-items: baseline;
        gap: 12px;
        margin-bottom: 14px;
        border-bottom: 1px solid var(--border);
        padding-bottom: 10px;
      }

      .stc-scheduler-id {
        color: var(--green);
        font-size: 14px;
        font-weight: bold;
      }

      .stc-scheduler-meta {
        color: var(--fg-dim);
        font-size: 11px;
      }

      .stc-kv-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 8px;
        margin-bottom: 14px;
      }

      .stc-kv {
        background: var(--bg-2);
        border: 1px solid var(--border);
        padding: 8px 10px;
      }

      .stc-kv-label {
        font-size: 10px;
        letter-spacing: 1px;
        text-transform: uppercase;
        color: var(--fg-dim);
      }

      .stc-kv-value {
        font-size: 18px;
        color: var(--fg);
        margin-top: 2px;
      }

      /* ── program tree ────────────────────────────────────────────── */
      .stc-program-tree {
        background: var(--bg-2);
        border: 1px solid var(--border);
        padding: 12px 14px;
        font-size: 11px;
        white-space: pre-wrap;
        word-break: break-all;
        color: var(--fg-mid);
        max-height: 300px;
        overflow-y: auto;
      }

      /* ── workflow dag ────────────────────────────────────────────── */
      .dag-root {
        overflow-x: auto;
        padding-bottom: 8px;
      }

      .dag-sequence {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .dag-parallel {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        gap: 0;
      }

      /* vertical connector between sequential nodes */
      .dag-v-connector {
        width: 1px;
        height: 20px;
        background: var(--border-hi);
        flex-shrink: 0;
      }

      /* horizontal joining bar above parallel branches */
      .dag-h-bar {
        display: flex;
        align-items: flex-start;
        position: relative;
      }

      .dag-h-bar::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        right: 50%;
        height: 1px;
        background: var(--border-hi);
      }

      .dag-branch {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0 8px;
        position: relative;
      }

      /* top stub connecting each branch to the h-bar */
      .dag-branch-top {
        width: 1px;
        height: 16px;
        background: var(--border-hi);
      }

      .dag-branch-bottom {
        width: 1px;
        height: 16px;
        background: var(--border-hi);
      }

      /* horizontal line spanning parallel group at top and bottom */
      .dag-parallel-wrapper {
        display: flex;
        flex-direction: column;
        align-items: stretch;
      }

      .dag-parallel-bar {
        display: flex;
        flex-direction: row;
        justify-content: center;
      }

      .dag-parallel-bar-line {
        flex: 1;
        height: 1px;
        background: var(--border-hi);
        margin-top: 0;
        align-self: center;
      }

      .dag-parallel-bar-line.edge {
        flex: 0 0 20px;
        max-width: 50%;
      }

      /* Task card */
      .dag-task {
        border: 1px solid var(--border-hi);
        background: var(--bg-1);
        min-width: 190px;
        max-width: 260px;
      }

      .dag-task-header {
        padding: 7px 10px 5px;
        border-bottom: 1px solid var(--border);
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 11px;
      }

      .dag-task-id {
        color: var(--fg-mid);
        font-size: 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 140px;
      }

      .dag-task-mod {
        color: var(--fg-dim);
        font-size: 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .dag-task-events {
        border-left: 1px solid var(--border);
        margin: 8px 10px;
        padding-left: 10px;
      }

      .dag-task-no-events {
        padding: 6px 10px;
        color: var(--fg-dim);
        font-size: 10px;
        font-style: italic;
      }

      .dag-event-row {
        display: flex;
        gap: 6px;
        align-items: baseline;
        padding: 2px 0;
        font-size: 11px;
        position: relative;
      }

      .dag-event-row::before {
        content: '';
        position: absolute;
        left: -10px;
        top: 9px;
        width: 6px;
        height: 1px;
        background: var(--border);
      }

      /* special cards */
      .dag-unfold {
        border: 1px dashed var(--border-hi);
        background: var(--bg-1);
        padding: 8px 12px;
        font-size: 11px;
        color: var(--purple);
        min-width: 120px;
        text-align: center;
      }

      .dag-unknown {
        border: 1px dashed var(--border);
        background: var(--bg);
        padding: 8px 12px;
        font-size: 11px;
        color: var(--fg-dim);
        min-width: 80px;
        text-align: center;
      }

      /* workflow list status dot */
      .wf-status-running   { color: var(--amber); }
      .wf-status-completed { color: var(--green); }
      .wf-status-failed    { color: var(--red); }
      .wf-status-pending   { color: var(--fg-dim); }

      /* ── dot indicator ───────────────────────────────────────────── */
      .dot {
        display: inline-block;
        width: 7px;
        height: 7px;
        border-radius: 0;
        margin-right: 5px;
      }
      .dot-green  { background: var(--green); }
      .dot-amber  { background: var(--amber); }
      .dot-red    { background: var(--red); }
      .dot-dim    { background: var(--fg-dim); }
    </style>
  </head>
  <body>
    {@inner_content}
  </body>
</html>
